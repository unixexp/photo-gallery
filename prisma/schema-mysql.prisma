generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Category {
  id          Bytes     @id @db.VarBinary(16)
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime? @updatedAt @map("updated_at")
  name        String    @unique
  description String?
  mainPhoto   String?   @map("main_photo")

  @@map("categories")
}

model Photo {
  id        Bytes     @id @db.VarBinary(16)
  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime? @updatedAt @map("updated_at")
  main      String?
  thumbnail String?

  @@map("photos")
}
