datasource db {
    provider = "mysql"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

model Category {
  id        Bytes     @db.VarBinary(16) @id
  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime? @map("updated_at")
  name      String    @unique
  mainPhoto String?   @map("main_photo")

  @@map("categories")
}

model Photo {
  id        Bytes     @db.VarBinary(16) @id
  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime? @map("updated_at")
  main      String?
  thumbnail String?

  @@map("photos")
}