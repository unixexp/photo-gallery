datasource db {
  provider = "sqlite"
  url      = "file:../photo-gallery.db"
}

model Category {
  id          Bytes     @id
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime? @updatedAt @map("updated_at")
  name        String    @unique
  description String?
  mainPhoto   String?   @map("main_photo")

  @@map("categories")
}

model Photo {
  id        Bytes     @id
  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime? @updatedAt @map("updated_at")
  main      String?
  thumbnail String?

  @@map("photos")
}
